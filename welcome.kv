ScreenManager:
    WelcomePage:
<WelcomePage>:
    MDBoxLayout:
        orientation: "vertical"
        padding: 10,20
        spacing: 0.1
        md_bg_color: 0.92,0.99,0.85,1
        FitImage:
            allow_stretch: True
            size_hint_y: 2
            radius: 30,30,0,0
            source:"images/welcome_bg.png"
        MDLabel:
            text: "Welcome To Relearnz..."
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0.5,0.15,1,1
            font_size: 35
            font_style: "H3"
        MDFillRoundFlatIconButton:
            text: "Let's Get Started"
            icon: "arrow-right"
            theme_text_color: "Custom"
            md_bg_color: 0.8,0.8,0.1,1
            pos_hint: {"center_x":0.5,"center_y":0.5}
            font_size: 24
            on_press: root.manager.current = "login"